<?xml version="1.0"?>
<configuration>

	<Physical>
		<Attack>
			<node>3</node>
			<start_time>175</start_time>
			<action>
				<name>Destroy</name>
			</action>
		</Attack>
	</Physical>


	<Unconditional>
		<Attack>
			<start_time>180</start_time>
			<frequency>25</frequency>
			<var><name>5</name><value>5</value><type>NUMBER</type></var>
			<var><name>3</name><value>3</value><type>NUMBER</type></var>
			<var><name>100</name><value>100</value><type>NUMBER</type></var>
			
			<action>
				<name>Create</name>
				<parameters>packetName:fakeHello:NET.type:5</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>field_name:NET.source:value:3:packetName:fakeHello</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>field_name:NET.destinationSeqNum:value:100:packetName:fakeHello</parameters>
			</action>

			<action>
				<name>Put</name>
				<parameters>direction:RX:nodes:5:throughWC:true:delay:1.5:packetName:fakeHello</parameters>
			</action>

		</Attack>

		<Attack>
			<start_time>180</start_time>
			<frequency>5</frequency>
			<var><name>0</name><value>0</value><type>NUMBER</type></var>
			<var><name>1</name><value>1</value><type>NUMBER</type></var>
			<var><name>5</name><value>5</value><type>NUMBER</type></var>
			<var><name>MAX</name><value>42</value><type>NUMBER</type></var>
			<var><name>MIN</name><value>38</value><type>NUMBER</type></var>
			<var><name>seqNoApp</name><value>60</value><type>NUMBER</type></var>
			<var><name>seqNoMac</name><value>100</value><type>NUMBER</type></var>
			<action>
				<name>Create</name>
				<parameters>packetName:newPacket:APP.type:0:NET.type:6:MAC.type:6</parameters>
			</action>


			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:MAC.source:value:1</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:MAC.destination:value:0</parameters>
			</action>


			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:MAC.sequenceNumber:value:seqNoMac</parameters>
			</action>


			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:NET.source:value:5</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:NET.destinationAodv:value:0</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:NET.destination:value:0</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:APP.data:value:RANDOM</parameters>
			</action>


			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:APP.sequenceNumber:value:seqNoApp</parameters>
			</action>

			<action>
				<name>Change</name>
				<parameters>packetName:newPacket:field_name:APP.sourceNodeID:value:5</parameters>
			</action>

			<action>
				<name>Put</name>
				<parameters>packetName:newPacket:nodes:0:direction:RX:throughWC:true:delay:1</parameters>
			</action>

			<action>
				<name>Expression</name>
				<item>1</item>
				<item>+=</item>
				<item>seqNoApp</item>
			</action>

			<action>
				<name>Expression</name>
				<item>1</item>
				<item>+=</item>
				<item>seqNoMac</item>
			</action>

		</Attack>


	</Unconditional>
	
</configuration>
